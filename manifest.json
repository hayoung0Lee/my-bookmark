{
    "name": "Bookmark with memo",
    "description": "This is a bookmark extension with memo feature",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background/dist/index.js"
    },
    "options_page": "options/public/options.html",
    "permissions": [
        "bookmarks",
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "runtime"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-scripts/dist/index.js"
            ],
            "css": [
                "content-scripts/dist/index.css"
            ]
        }
    ],
    "action": {
        "default_title": "Press it to open bookmark"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content-scripts/dist/*"
            ],
            "matches": [
                "<all_urls>"
            ],
            "use_dynamic_url": true
        }
    ]
}